<div id="rooms-page">

    <div class="rooms-actions">
        <h1>Manage Rooms</h1> 
        <a href="/rooms/create" class="secondary-button">Add a room</a>
    </div>

    <div id="rooms">
        {{#each user.rooms}}
            <div class="room">
                <div class="card-title">
                    <h2>{{ this.name }}</h2>
                    <div class="room-actions">
                        <a href="/rooms/{{ this._id }}/edit"><i class="bi bi-pencil-square"></i></a>
                    </div>
                </div>
                <div class="card-content">
                    <p class="stats">
                        <span class="label">Plants</span>
                        <span class="stats-plants">{{ this.plants.length }}</span>
                    </p>
                    <div class="card-invitees">
                        <span class="label">Invitees</span>
                        {{#if this.inviteesId.length}}
                            <div>
                                {{#each this.inviteesId}}
                                    <div class="card-invitee" style="background-image:url('{{ this.avatarUrl }}"></div>
                                {{/each}}
                            </div>
                        {{else}}
                            <span class="no-invitees">No invitees.</span>
                        {{/if}}
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

</div>