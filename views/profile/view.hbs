
{{#if userOwnProfile}}
    <div class="weather-infobox">
        <img src="{{ weatherInformations.iconUrl }}" />
        <p>
            Expect {{ weatherInformations.weather }} in {{ weatherInformations.location }} today. The temperature will be {{ weatherInformations.temperature }}Â°C. Take good care of your plants!
        </p>
    </div>
{{/if}}

<div class="profile">
    <div class="profile-avatar">
        <div style=" background-color: white;background-image:url('{{ avatarUrl }}');" class="profile-pic"></div>
    </div>
    <div class="profile-infos">
        <h1>{{ user.username }}</h1>
        <p class="stats">
            <span class="stats-rooms">{{ roomsCount }}</span>
            <span class="stats-plants">{{ plantsCount }}</span>
        </p>
        <p><i class="bi bi-geo-alt-fill"></i> {{ user.location }}</p>
        <p>{{ user.bio }}</p>
    </div>
</div>

<div id="filters">
    <div class="filters-rooms">
        <p>Filter by rooms</p>
        {{#each user.rooms}}
            <div class="filter-button">{{ this.name }}</div>
        {{/each}}
    </div>
    <div>
        <a href="/rooms" class="button">Manage rooms</a>
    </div>
</div>

<div id="plants">
    {{#if userOwnProfile}}
        <div class="plant add-plant">
            <a href="/plants/create">
                <i class="bi bi-plus-lg"></i>
                <h2>Add a Plant</h2>
            </a>
        </div>
    {{/if}}

    {{#each user.plants}}
    <div><h2>{{this.nickname}}</h2></div>
    {{/each}}
</div>

{{#if errorMessage}}
    <p class="error-message">{{ errorMessage }}</p>
{{/if}}