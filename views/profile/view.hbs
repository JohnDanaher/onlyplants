<div id="profile-page">

    <div class="profile">
        <div class="profile-avatar">
            <div style=" background-color: white;background-image:url('{{ avatarUrl }}');" class="profile-pic"></div>
        </div>
        <div class="profile-infos">
            <h1>{{ user.username }}</h1>
            <p class="stats">
                <span class="stats-rooms">{{ roomsCount }}</span>
                <span class="stats-plants">{{ plantsCount }}</span>
            </p>
            <p><i class="bi bi-geo-alt-fill"></i> <b>{{ user.location }}</b></p>
            <p>{{ user.bio }}</p>
        </div>
    </div>

    <div class="profile-content">

        {{#if userOwnProfile}}
            <div class="weather-infobox">
                <img src="{{ sessionSpecificData.weatherIconUrl }}" />
                <p>
                    <b>Hello, {{ loggedInUsername }}!</b> Today, {{ sessionSpecificData.weatherConditions }} in {{ sessionSpecificData.weatherLocation }}, today (the temperature is {{ sessionSpecificData.weatherTemperature }}Â°C). Take good care of your plants! ðŸŒºðŸŒ¿
                </p>
            </div>
        {{/if}}

        <div id="filters">
            <div class="filters-rooms">
                <p>Filter by rooms</p>
                {{#if userOwnProfile}}
                    {{#each user.rooms}}
                        <div class="filter-button selected" room-name="{{ this.slug }}">{{ this.name }}</div>
                    {{/each}}   
                    <div class="filter-button selected" room-name="friends-rooms">Friends' Rooms</div>
                {{else}}
                    {{#each sessionSpecificData.allowedRooms }}
                        <div class="filter-button selected" room-name="{{ this.slug }}">{{ this.name }}</div>
                    {{/each}}
                {{/if}}
            </div>
            {{#if userOwnProfile}}
                <div class="profile-actions">
                    <a href="/plants/create" class="secondary-button">Add a plant</a>
                    <a href="/rooms" class="secondary-button">Manage rooms</a>
                </div>
            {{/if}}
        </div>

        <p class="plants-count"></p>

        <div id="plants">
            {{#if userOwnProfile}}
                {{#each user.plants}}
