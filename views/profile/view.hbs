<div class="profile">
    <div class="profile-avatar">
        <div style="background-image:url('{{ user.avatarUrl }}')" class="profile-pic"></div>
    </div>
    <div class="profile-infos">
        <h1>{{ user.username }}</h1>
        <p class="stats">
            <span class="stats-rooms">{{ roomsCount }}</span>
            <span class="stats-plants">{{ plantsCount }}</span>
        </p>
        <p><i class="bi bi-geo-alt-fill"></i> {{ user.location }}</p>
        <p>{{ user.bio }}</p>
    </div>
</div>

<div id="filters">
    <div><p>Filter by rooms</p></div>
    {{#each user.rooms}}
        <div class="filter-button">{{ this.name }}</div>
    {{/each}}
    <div>
        <a href="/rooms" class="button">Manage rooms</a>
    </div>
</div>

<div id="plants">
    <div><h2>Plant one</h2></div>
    <div><h2>Plant two</h2></div>
    <div><h2>Plant three</h2></div>
    <div><h2>Plant four</h2></div>
    <div><h2>Plant five</h2></div>
    <div><h2>Plant six</h2></div>
</div>

{{#if errorMessage}}
    <p class="error-message">{{ errorMessage }}</p>
{{/if}}