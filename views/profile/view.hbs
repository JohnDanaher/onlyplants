                                <a href="/plants/edit/{{ this._id }}"><i class="bi bi-pencil-square"></i></a>
                            </div>
                        </div>
                        <div class="card-title">
                            <h2>{{this.nickname}}</h2>
                            <span class="plant-room">{{ this.room.name }}</span>
                        </div>
                        <div class="card-content">
                            <p class="flex-row">
                                <span class="card-icon">
                                    <i class="bi bi-flower1"></i>
                                </span>
                                <span>
                                    <span class="card-label">Common / Latin names</span><br/>
                                    {{ this.commonName }}<br/>
                                    <i>{{ this.latinName }}</i>
                                </span>
                            </p>
                            <p class="flex-row">
                                <span class="card-icon">
                                    <i class="bi bi-brightness-high"></i> 
                                </span>
                                <span>
                                    <span class="card-label">Ideal Lighting</span><br/>
                                    {{ this.light }}
