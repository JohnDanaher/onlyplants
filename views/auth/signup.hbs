<h1>Signup</h1>

<form action="/auth/signup" method="POST" enctype="multipart/form-data">
    <input type="text" name="firstName" id="firstName" placeholder="First Name" /><br />
    <input type="text" name="lastName" id="lastName" placeholder="Last Name" /><br />
    <input type="date" name="dateOfBirth" id="dateOfBirth" /><br />
    <input type="text" name="username" id="username" placeholder="Username" /><br />
    <input type="email" name="email" id="email" placeholder="Email" /><br />
    <input type="text" name="location" id="location" placeholder="Location" /><br />
    <input type="file" name="avatar" id="avatar" /><br />
    <textarea name="bio" id="bio" placeholder="Bio"></textarea /><br />
    <input type="password" name="password" id="password" placeholder="********" /><br />
    <input type="password" name="passwordCheck" id="passwordCheck" placeholder="********" /><br />
    <input type="submit" value="Signup" />
</form>

{{#if errorMessage }}
    <p>{{ errorMessage }}</p>
{{/if}}